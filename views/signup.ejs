<body>
    <h1>Add User</h1>
    <form action="/users/signup" method="POST">
        <label for="user_name">Username</label>
        <input type="text" class="input_box" id="user_name" name="user_name" required><br></br>
        <label for="password">Password</label>
        <input type="password" class="input_box" id="password" name="password" required><br></br>
