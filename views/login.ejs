<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login Page</title>
    <link href="/css/main.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.typekit.net/oqh1yqs.css">
</head>
<body class="login_page">
    <div class="first_content">
        <h1>Blogging Tool</h1>
        <div class='main_content'>
                <h2 id="login_h2">Log In</h2>
                <form action="/users/login" method="POST">
                    <input type="text" class="input_box" id="user_name" name="user_name" placeholder="Username" required><br><br>
                    <input type="password" class="input_box" id="password" name="password" placeholder="Password" required><br><br>
                    <button type="submit" id="button">LOG IN</button>
                </form>
                <div class="signup">
                    <p>Don't have an account? <a href="/users/signup" id="signup_p">Sign up</a></p>
        </div>
    </div>
    <% if (typeof error !== 'undefined') { %>
        <script>
            alert("<%= error %>");
        </script>
    <% } %>
</body>
</html>
